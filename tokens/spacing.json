{
  "name": "Thoughtform Spacing System",
  "version": "1.0.0",
  "base": "4px",

  "scale": {
    "1": "4px",
    "2": "8px",
    "3": "12px",
    "4": "16px",
    "5": "20px",
    "6": "24px",
    "8": "32px",
    "10": "40px",
    "12": "48px",
    "16": "64px"
  },

  "semantic": {
    "gutter": "40px",
    "panelPadding": "16px",
    "cardPadding": "16px",
    "sectionGap": "24px",
    "componentGap": "16px",
    "elementGap": "8px"
  },

  "navigationGrid": {
    "hudPadding": "clamp(32px, 5vw, 64px)",
    "hudPaddingFormula": "clamp(32px, 5vw, 64px)",
    "cornerSize": "40px",
    "cornerSizeTablet": "30px",
    "cornerSizeMobile": "24px",
    "railWidth": "60px",
    "cornerRailGap": "20px",
    "adjacentMargin": "48px",
    "adjacentInsetFormula": "calc(48px + clamp(32px, 5vw, 64px))",
    "note": "Elements adjacent to grid rails use adjacentInsetFormula for consistent alignment and margin from grid lines"
  },

  "particles": {
    "GRID": 3,
    "note": "All particle positions snap to 3px grid - DO NOT CHANGE"
  },

  "borders": {
    "radius": "0px",
    "note": "Zero border-radius everywhere - non-negotiable"
  }
}
